<div ng-app="app">
  <div ng-controller="myTodos">
    <h3>My Tasks</h3>
    <div> Number of Incomplete Tasks: {{ $scope.completed_tasks }}</div>
    <div> Number of Completed Tasks: {{ todos.length }}</div>
    <div ng-repeat="task in todos track by $index">
      <p ng-click="toggleCompleted(task)" ng-class="{strike: task.completed}">{{ task.text }}</p>
    </div>

    <div>
      <h4>Add a task</h4>
      <input ng-model="newTask">
      <button ng-click="addTask(newTask)">Add Task</button>
    </div>
  </div>
</div>
